<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        card_view:background="@color/colorWhite"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:focusableInTouchMode="false">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/rl_notificacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_notificacion"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/tv_lista_titulo_notificacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Titulo"
                android:textColor="#0073AF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:breakStrategy="balanced"
                android:paddingRight="5dp"
                android:maxLines="1"
                app:layout_constraintBottom_toBottomOf="@+id/iv_notificacion"
                app:layout_constraintEnd_toStartOf="@+id/iv_notificacion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_notificacion" />

            <TextView
                android:id="@+id/tv_lista_fecha_notificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="Fecha"
                android:textColor="#0073AF"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_lista_mensaje_notificacion"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:breakStrategy="balanced"
                android:paddingRight="5dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text=""
                android:textColor="#5B6770"
                android:textSize="13sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_lista_fecha_notificacion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_notificacion" />



        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>
